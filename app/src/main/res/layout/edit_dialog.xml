<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa sự kiện"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_margin="3dp"
        android:padding="12dp"
        android:background="@color/green"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_login">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:padding="12dp"
                android:background="@drawable/border_edt"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/edt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Content"
                android:padding="12dp"
                android:background="@drawable/border_edt"
                android:layout_marginTop="15dp"
                />
            <Spinner
                android:id="@+id/spiner_status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Status"
                android:padding="12dp"
                android:background="@drawable/border_edt"
                android:layout_marginTop="15dp"
                android:spinnerMode="dialog"
                />
            <TextView
                android:id="@+id/edt_startday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_edt"
                android:layout_marginTop="15dp"
                android:text="Startday"
                android:textSize="17dp"
                android:textColor="#6E7478"
                android:padding="12dp"
                android:drawableEnd="@drawable/baseline_date_range_24"/>

            <TextView
                android:id="@+id/edt_endday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_edt"
                android:layout_marginTop="15dp"
                android:text="Endday"
                android:textSize="17dp"
                android:textColor="#6E7478"
                android:padding="12dp"
                android:drawableEnd="@drawable/baseline_date_range_24"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:padding="15dp">
        <Button
            android:id="@+id/btnout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#808080"
            android:text="Out"
            android:textSize="14dp"/>
        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:textSize="14dp"
            android:text="Submit"/>
    </LinearLayout>
</LinearLayout>